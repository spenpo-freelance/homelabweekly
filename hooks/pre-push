#!/bin/sh


# Sync images to R2 before pushing
# This ensures any new or changed images are uploaded to R2
if [ -f "r2-sync.php" ]; then
	echo >&2 "üñºÔ∏è  Syncing images to R2 before push..."
	if php r2-sync.php upload >&2; then
		echo >&2 "‚úÖ Images synced to R2 successfully"
	else
		echo >&2 "‚ö†Ô∏è  Warning: Image sync to R2 failed, but continuing with push..."
		echo >&2 "   You may want to run 'php r2-sync.php upload' manually later."
	fi
else
	echo >&2 "‚ö†Ô∏è  Warning: r2-sync.php not found, skipping image sync"
fi

exit 0
